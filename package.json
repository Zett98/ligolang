{
  "name": "ligo",
  "esy": {
    "build": "dune build -p #{self.name}",
    "release": {
      "bin": [
        "genesis_helper",
        "sidecli"
      ]
    },
    "buildEnv": {
      "PATH": "%{localStore}%/../bin:$PATH"
    }
  },
  "license": "MIT",
  "scripts": {
    "test": "dune test",
    "format": "dune build @fmt --auto-promote"
  },
  "dependencies": {
    "ocaml": "4.10.2000",
    "@opam/dune": ">= 2.9.1",
    "@opam/hex": ">= 1.4.0",
    "@opam/menhir": "20200624",
    "@opam/ocamlgraph": ">= 2.0.0",
    "@opam/coq": "~8.13",
    "@opam/ppx_deriving": ">= 5.2.1",
    "@opam/ppx_deriving_yojson": ">= 3.6.1",
    "@opam/ppx_expect": "v0.14.1",
    "@opam/yojson": ">= 1.7.0",
    "@opam/alcotest": ">= 1.0",
    "@opam/getopt": "20120615",
    "@opam/terminal_size": ">= 0.1.4",
    "@opam/pprint": "20200410",
    "@opam/linenoise": ">= 1.3.1",
    "@opam/qcheck": ">= 0.17",
    "@opam/ocaml-migrate-parsetree": ">= 2.1.0",
    "@opam/lwt": ">= 5.4.2",
    "@opam/bisect_ppx": ">= 2.5.0",
    "@opam/bls12-381": "1.0.0",
    "@opam/bls12-381-unix": "1.0.0",
    "@opam/bls12-381-legacy": "*",
    "@opam/ligo-types": "*",
    "@opam/alcotest-lwt": "*",
    "@opam/data-encoding": "*",
    "@opam/lwt-canceler": "0.3",
    "@opam/lwt_log": "*",
    "@opam/ringo": "*",
    "@opam/ringo-lwt": "*",
    "@opam/ipaddr": "*",
    "@opam/ptime": "*",
    "@opam/mtime": "*",
    "@opam/secp256k1-internal": "*",
    "@opam/resto-directory": "*",
    "@opam/hacl-star": "*",
    "@opam/hacl-star-raw": "*",
    "@opam/irmin-pack": "*",
    "@opam/resto-cohttp-self-serving-client": "*",
    "@opam/tezos-rust-libs": "*",
    "@opam/tezos-micheline": "*"
  },
  "resolutions": {
    "@opam/ligo-types": "link:./ligo-types.opam",
    "@opam/bls12-381-legacy": {
      "source": "link:./opams/bls12-381-legacy.opam",
      "override": {
      }
    },
    "@opam/bls12-381-gen": {
      "source": "link:./opams/bls12-381-gen.opam",
      "override": {
      }
    }
  }
}
